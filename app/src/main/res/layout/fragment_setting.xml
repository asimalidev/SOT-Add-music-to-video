<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
android:background="@color/appbackground"
android:orientation="vertical"
tools:context=".fragments.SettingFragment">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="invisible"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="Settings"

        android:textColor="@color/white"
        android:textSize="20sp"

        android:textStyle="bold" />
</LinearLayout>

<!-- Home -->
<LinearLayout
    android:id="@+id/llHome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_home_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>

<!-- PRO -->


<!-- Share App -->
<LinearLayout
    android:id="@+id/ShareApps"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_share1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="Share"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>

<!-- Feedback -->
<LinearLayout
    android:id="@+id/llFeedback"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_feedback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="Feedback"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>

<!-- Rate us -->
<LinearLayout
    android:id="@+id/llRateUs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_rateuse" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="Rate us"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>

<!-- More Apps -->
<LinearLayout
    android:id="@+id/llMoreApps"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_moreapps" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="More Apps"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>

<!-- Ads Consent -->
<LinearLayout
    android:id="@+id/llAdsConsent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_adsconsent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="Ads Consent"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>

<!-- Privacy Policy -->
<LinearLayout
    android:id="@+id/llPrivacyPolicy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15ssp"
        android:layout_marginRight="8dp"
        android:src="@drawable/ic_privacypolicy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="Privacy Policy"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>

</LinearLayout>
