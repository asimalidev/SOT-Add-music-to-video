<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1C1C1C"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvTotalVolume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="@string/speed"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivDone"
            app:layout_constraintStart_toEndOf="@+id/ivClose"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ivDone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_done"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSpeed1"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_bg_stroke"
            android:gravity="center"
            android:text="0.25"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSpeed2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_bg_stroke"
            android:gravity="center"
            android:text="0.75"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/tvSpeed3"
            app:layout_constraintStart_toEndOf="@id/tvSpeed1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSpeed3"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_bg_stroke"
            android:gravity="center"
            android:text="1.0"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvSpeed4"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_bg_stroke"
            android:gravity="center"
            android:text="1.25"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSpeed1" />

        <TextView
            android:id="@+id/tvSpeed5"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_bg_stroke"
            android:gravity="center"
            android:text="1.5"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toStartOf="@id/tvSpeed3"
            app:layout_constraintStart_toEndOf="@id/tvSpeed1"
            app:layout_constraintTop_toBottomOf="@id/tvSpeed2"/>

        <TextView
            android:id="@+id/tvSpeed6"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/rounded_bg_stroke"
            android:gravity="center"
            android:text="2.0"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSpeed3" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
